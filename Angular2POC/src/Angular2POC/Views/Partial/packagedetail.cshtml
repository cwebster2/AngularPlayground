<div *ngIf="filepackage">
    <hr />
    <h2 class="sub-header">Package Name: {{filepackage.name}}</h2>
    <p><strong>Case Reference: {{filepackage.caseReference}}</strong></p>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>File Name</th>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="#file of filepackage.files">
                    <td>{{file.id}}</td>
                    <td><a href="#" (click)="openDoc()">{{filepackage.caseReference}} {{file.name}}</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>