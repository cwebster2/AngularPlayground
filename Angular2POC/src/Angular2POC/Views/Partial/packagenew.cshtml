<h3 class="text-left">Create a new package</h3>
<form (ngSubmit)="onSubmit()" #packageForm="ngForm" class="dropzone" role="form">
    <div class="row">
        <div class="form-group text-left col-lg-4 col-md-6 col-sm-8 col-xs-10">
            <label for="name">Package Name</label>
            <input type="text" class="form-control col-xs-3" required [(ngModel)]="newPackage.name" ngControl="name" #name="ngForm">
            <div [hidden]="name.valid || name.pristine" class="alert alert-danger">
                Name is required
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group text-left col-lg-4 col-md-6 col-sm-8 col-xs-10">
            <label for="caseReference">Case Reference</label>
            <input type="text" class="form-control col-xs-3" required [(ngModel)]="newPackage.caseReference" ngControl="caseRefernece" #caseReference="ngForm">
            <div [hidden]="caseReference.valid || caseReference.pristine" class="alert alert-danger">
                Case Reference is required
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group text-left col-lg-4 col-md-6 col-sm-8 col-xs-10">
            <div class="checkbox">
                <label><input type="checkbox" [(ngModel)]="newPackage.isUrgent" ngControl="isUrgent" #isUrgent="ngForm" value="1"> Urgent - Action necessary within 30 days?</label>
            </div>
        </div>
    </div>
    <div class="row text-left">
        <div class="form-group col-lg-4 col-md-6 col-sm-8 col-xs-10">
            <label style="margin-bottom: 0;">Documents</label><br />
            <span style="font-size: 75%; margin-top: 0;">Drag and drop documents below</span>
            <div id="uxPackageDocs" class="dropzone-target">

            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group text-left col-lg-4 col-md-6 col-sm-8 col-xs-10">
            <button type="submit" class="btn btn-default" [disabled]="!packageForm.form.valid">Submit</button>
        </div>
    </div>
</form>